    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'adventofcode'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=adventofcode",
                    "--package=adventofcode"
                ],
                "filter": {
                    "name": "adventofcode",
                    "kind": "bin"
                }
            },
            "args": ["viz", "day16", "--part1", "--test=1"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "attach",
            "name": "ðŸ“Ž Attach Debug executable 'adventofcode'",
            "program": "${workspaceFolder}/target/debug/adventofcode"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'adventofcode'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=adventofcode",
                    "--package=adventofcode"
                ],
                "filter": {
                    "name": "adventofcode",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
